<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/light_bg">

    <ImageView
        android:id="@+id/octocat_imageview"
        android:layout_width="256dp"
        android:layout_height="128dp"
        android:src="@drawable/octocat"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/leaf_stand_imageview"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:paddingTop="56dp"
        android:src="@drawable/cat_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logo_textview"/>

    <TextView
        android:id="@+id/logo_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cactcles_text"
        android:paddingTop="20dp"
        android:layout_marginStart="2dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#F0951C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/octocat_imageview"/>

    <TextView
        android:id="@+id/logo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cactcles_text"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/pendulum_color2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/octocat_imageview"/>

    <ImageView
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/get_started_btn"
        android:contentDescription="@string/starts_the_application_text"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>